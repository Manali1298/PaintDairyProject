    <div id="chartContainer1">
        <div id="example">
            
            <h2>
                Bar Chart
            </h2><div style="background-color:orangered;width:140px;height:4px;"></div>
            <hr />

            <div class="box wide">
                <div class="box-col">
                    <input id="UnitYears" name="baseUnit" class="k-radio" type="radio" value="years" autocomplete="off" />
                    <label class="k-radio-label" for="UnitYears">Years</label>

                    <input id="UnitMonths" class="k-radio" name="baseUnit"
                           type="radio" value="months" autocomplete="off" />
                    <label class="k-radio-label" for="UnitMonths">Months</label>

                    <input id="UnitWeeks" class="k-radio" name="baseUnit"
                           type="radio" value="weeks"  autocomplete="off" />
                    <label class="k-radio-label" for="UnitWeeks">Weeks</label>

                    <input id="UnitDays" class="k-radio" name="baseUnit"
                           type="radio" value="days" checked="checked" autocomplete="off" />
                    <label class="k-radio-label" for="UnitDays">Days</label>
                </div>
            </div>
        </div>

        <div class="demo-section k-content wide">
            <div id="linechart" style="background-color:olivedrab;"></div>
        </div>
    </div>


    <script>
        function createChart() {
            $("#linechart").kendoChart({
                dataSource: {
                    transport: {
                        read: {
                            url: "http://localhost:58979/AlbumStore/checkoutdata",
                            dataType: "json"
                        }

                    },
                    schema: {
                        model: {
                            fields: {
                                shipdate: { type: "date" },
                            }
                        }
                    },
                    sort: {
                        field: "shipdate",
                        dir: "dec"
                    }
                },
                title: {
                    text: "Sell of album Day Wise"
                },
                legend: {
                    position: "bottam"
                },
                seriesDefaults: {
                    type: "column"
                },
                series:
                [{

                    field: "totalprice",
                    categoryField: "shipdate",
                    aggregate: "sum",
                    name: "Total Sell",


                }],
                categoryAxis: {
                    baseUnit: "days",
                    labels: {
                        dateFormats: {
                            date: "dd-MM-yyyy"
                        },
                        //rotation: -90
                    },
                    majorGridLines: {
                        visible: false
                    }
                },
                valueAxis: {
                    labels: {
                        format: "N0"
                    },
                    majorUnit: 10000,
                    line: {
                        visible: false
                    }
                },
                tooltip: {
                    visible: true,
                    ///template: "#= Sum #: #= kendo.parseDate(Date, 'MM/dd/yyyy') #",
                    format: "N0"
                }
            });
        }

        $(document).ready(createChart);
        $(document).bind("kendo:skinChange", createChart);
        $(".box").bind("change", refresh);

        function refresh() {
            var chart = $("#linechart").data("kendoChart"),
                series = chart.options.series,
                categoryAxis = chart.options.categoryAxis,
                baseUnitInputs = $("input:radio[name=baseUnit]");

            categoryAxis.baseUnit = baseUnitInputs.filter(":checked").val();

            chart.refresh();
        }
    </script>
